<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_user_info">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frameLayout"
            android:padding="8dp"
            android:id="@+id/details_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="8dp"
                android:maxWidth="64dp"
                android:maxHeight="64dp"
                android:adjustViewBounds="true"
                android:src="@drawable/placeholder_avatar"
                android:contentDescription="@string/card_user_photo"
                android:id="@+id/iv_user_photo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/iv_user_photo"
                android:text="@string/placeholder_name"
                android:textSize="22sp"
                android:id="@+id/tv_user_name"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_user_name"
                android:layout_toEndOf="@+id/iv_user_photo"
                android:maxWidth="16dp"
                android:maxHeight="16dp"
                android:src="@drawable/bitcoin"
                android:adjustViewBounds="true"
                tools:ignore="ContentDescription"
                android:id="@+id/iv_bitcoin_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_user_name"
                android:layout_toEndOf="@+id/iv_bitcoin_icon"
                android:layout_alignBottom="@+id/iv_bitcoin_icon"
                android:text="@string/placeholder_bitcoin_hash"
                android:textSize="12sp"
                android:id="@+id/tv_user_coinbase"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>