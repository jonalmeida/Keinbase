<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_search_bar"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_text_keybase_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/abc_edit_text_inset_top_material"
            android:layout_marginBottom="@dimen/abc_edit_text_inset_bottom_material"
            android:background="@android:color/transparent"
            android:hint="@string/search_bar_hint"/>
    </android.support.v7.widget.CardView>

    <!--<RecyclerView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
        <!-- -->
    <!--</RecyclerView>-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_search_results"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_search_bar">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>