<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="elevation">0dp</item>

    </style>
    
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/primary</item>

        <!-- Support library compatibility -->
        <item name="background">@color/primary</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="TabsLayout" parent="Widget.Design.TabLayout">
        <item name="background">@color/primary_dark</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="tabIndicatorColor">@color/accent</item>
        <item name="tabTextAppearance">@style/TabsTextStyle</item>
        <item name="tabSelectedTextColor">#ffffff</item>
    </style>

    <style name="TabsTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#b4b6b8</item>
    </style>

    <style name="ProfileCardViewStyle">
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_vertical_margin</item>
        <item name="elevation">@dimen/cardview_default_elevation</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="NoTabShadow" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
